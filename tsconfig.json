{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "react": [ "./node_modules/@types/react" ]
    },
    "lib": ["dom", "ESNext", "WebWorker"]
  },
  "include": [
    "src/**/*", "./config/jest/setupJest.ts",
    "./__mocks__/svgMock.tsx"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "node_modules"
  ]
}
